@model IEnumerable<Ward_Management_System.ViewModels.PatientPrecriptionsViewModel>
@{
    ViewData["Title"] = "My Prescriptions";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info mt-3">
            You haven't prescribed any medications yet.
        </div>
    }
    else
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Patient</th>
                    <th>Patient's ID.No</th>
                    <th>Total Items</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var patient in Model)
                {
                    <tr>
                        <td>@patient.PatientName</td>
                        <td>@patient.PatientIdNumber</td>
                        <td>@patient.TotalItems</td>
                        <td>@patient.Status</td>
                        <td>
                            <button class="btn btn-info btn-sm view-prescriptions"
                                    data-patient-id="@patient.PatientIdNumber"
                                    data-patient-name="@patient.PatientName">
                                View Prescriptions
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<!-- Modal for prescription details -->
<div class="modal fade" id="prescriptionsModal" tabindex="-1" role="dialog" aria-labelledby="prescriptionsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="prescriptionsModalLabel">Prescriptions for <span id="patientName"></span></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                  
                </button>
            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Medication</th>
                            <th>Instructions</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="prescriptionsTableBody">
                        <!-- Will be filled by JavaScript -->
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // No need to serialize the entire model anymore
            // We'll use data attributes for each patient

            $('.view-prescriptions').click(function() {
                var patientId = $(this).data('patient-id');
                var patientName = $(this).data('patient-name');

                // Make an AJAX call to get the prescriptions
                $.get('/Doctor/GetPatientPrescriptions', { patientIdNumber: patientId }, function(data) {
                    // Set the modal title
                    $('#patientName').text(patientName);

                    // Clear previous data
                    $('#prescriptionsTableBody').empty();

                    // Add each prescription to the modal
                           data.forEach(function(prescription) {
            prescription.medications.forEach(function(med) {
                var instructions = `${med.dosage} - ${med.frequency} for ${med.duration}`;
                if (med.notes) {
                    instructions += `<br><small>${med.notes}</small>`;
                }

                var row = `
                    <tr>
                        <td>${new Date(prescription.prescribedDate).toLocaleDateString()}</td>
                        <td>${med.medicationName}</td>
                        <td>${instructions}</td>
                        <td>
                            <a href="/Doctor/UpdatePrescription?prescriptionId=${prescription.prescriptionId}"
                               class="btn btn-primary btn-sm">Update</a>
                        </td>
                    </tr>
                `;

                $('#prescriptionsTableBody').append(row);
            });
        });


                    // Show the modal
                    $('#prescriptionsModal').modal('show');
                });
            });
        });
    </script>
}


