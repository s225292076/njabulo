@{
	ViewData["Title"] = "Admin Page";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="user-background">
    <div class="main-content">
        <div class="content">
            <div class="container-fluid patient-dashboard py-5">
                <!-- Welcome Message -->
                <div class="row justify-content-center text-center mb-5">
                    <div class="col-lg-8">
                        <h1 class="display-4 fw-bold text-dark">Welcome, Admin!</h1>
                        <p class="lead text-muted">Manage hospital data, staff, and ward infrastructure effectively.</p>
                    </div>
                </div>

                <!-- Admin Action Cards -->
                <div class="row g-4 px-3 px-md-5">

                    <!-- Manage Beds/Wards -->
                    <div class="col-md-6 col-xl-6">
                        <div class="card h-100 p-3 shadow dashboard-card border-primary-subtle">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="card-title text-primary">
                                        <i class="bi bi-hospital-fill me-2"></i> Manage Beds/Wards
                                    </h5>
                                    <p class="card-text">Add, update, and monitor wards and bed availability.</p>
                                </div>
                                <a asp-controller="Admin" asp-action="WardDetails" class="btn btn-primary mt-3">Manage</a>
                            </div>
                        </div>
                    </div>

                    <!-- Manage Employees -->
                    <div class="col-md-6 col-xl-6">
                        <div class="card h-100 p-3 shadow dashboard-card border-info-subtle">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="card-title text-info">
                                        <i class="bi bi-people-fill me-2"></i> Manage Employees
                                    </h5>
                                    <p class="card-text">Register staff, assign roles, and maintain employee records.</p>
                                </div>
                                <a asp-controller="Admin" asp-action="StaffList" class="btn btn-info mt-3 text-white">Manage</a>
                            </div>
                        </div>
                    </div>

                    <!-- Manage Medication -->
                    <div class="col-md-6 col-xl-6">
                        <div class="card h-100 p-3 shadow dashboard-card border-success-subtle">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="card-title text-success">
                                        <i class="bi bi-capsule-pill me-2"></i> Manage Medication
                                    </h5>
                                    <p class="card-text">Track inventory, add new drugs, and update availability.</p>
                                </div>
                                <a asp-controller="Admin" asp-action="ViewMedication" class="btn btn-success mt-3">Manage</a>
                            </div>
                        </div>
                    </div>

                    <!-- Account Holders Overview -->
                    <div class="col-md-6 col-xl-6">
                        <div class="card h-100 p-3 shadow dashboard-card border-purple">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="card-title text-purple">
                                        <i class="bi bi-person-lines-fill me-2"></i> Account Holders Overview
                                    </h5>
                                    <p class="card-text">View the number of users registered and track registration trends.</p>
                                </div>
                                <a asp-controller="Admin" asp-action="RegisteredUsers" class="btn bg-purple mt-3 text-white">Manage</a>
                            </div>
                        </div>
                    </div>


                    <!-- Hospital Information -->
                    <div class="col-md-6 col-xl-6 offset-md-3 offset-xl-3">
                        <div class="card h-100 p-3 shadow dashboard-card border-warning-subtle">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="card-title text-warning">
                                        <i class="bi bi-info-circle-fill me-2"></i> Hospital Information
                                    </h5>
                                    <p class="card-text">Update contact info, visiting hours, and general hospital data.</p>
                                </div>
                                <a asp-controller="Admin" asp-action="HospitalInfo" class="btn btn-warning mt-3 text-dark">Manage</a>
                            </div>
                        </div>
                    </div>


                </div>


                </div>
            </div>
        </div>
    </div>
</div>