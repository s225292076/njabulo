@model IEnumerable<Ward_Management_System.Models.HospitalInfo>

@{
    ViewData["Title"] = "HospitalInfo Page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid patient-dashboard py-5 ">
    <!-- Header -->
    <div class="row mb-4 justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="fw-bold text-primary display-6">🏥 Hospital Information Overview</h1>
            <p class="text-muted">Detailed information of the hospital</p>
        </div>
    </div>

    <!-- Table Section -->
    <div class="row">
        <div class="col-lg-12 mb-4">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white fw-semibold fs-5">
                    Hospital Information
                </div>
                <div class="card-body p-4">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle table-bordered" id="hospitalInfoTable">
                            <thead class="table-light text-center text-uppercase small">
                                <tr>
                                    <th>Name</th>
                                    <th>Address</th>
                                    <th>Contact No.</th>
                                    <th>Email</th>
                                    <th>Website</th>
                                    <th>Departments</th>
                                    <th>Operating Hours</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var hospitalInfo in Model)
                                {
                                    <tr>
                                        <td><strong>@hospitalInfo.Name</strong></td>
                                        <td>@hospitalInfo.Address</td>
                                        <td>@hospitalInfo.ContactNumber</td>
                                        <td><a href="mailto:@hospitalInfo.Email">@hospitalInfo.Email</a></td>
                                        <td><a href="@hospitalInfo.Website" target="_blank">@hospitalInfo.Website</a></td>
                                        <td>
                                            <div class="dropdown">
                                                <button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button"
                                                        id="departmentDropdown-@hospitalInfo.Id"
                                                        data-bs-toggle="dropdown" aria-expanded="false">
                                                    View Departments
                                                </button>
                                                <ul class="dropdown-menu shadow-sm rounded" aria-labelledby="departmentDropdown-@hospitalInfo.Id">
                                                    @if (hospitalInfo.Departments != null && hospitalInfo.Departments.Any())
                                                    {
                                                        foreach (var department in hospitalInfo.Departments)
                                                        {
                                                            <li><span class="dropdown-item">@department.DepartmentName</span></li>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <li><span class="dropdown-item text-muted">No Departments</span></li>
                                                    }
                                                </ul>
                                            </div>
                                        </td>
                                        <td>@hospitalInfo.OperatingHours</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Back Button -->
    <div class="text-center mt-4">
        <a asp-controller="Admin" asp-action="Admin" class="btn btn-secondary px-4">
            <i class="bi bi-arrow-left-circle me-1"></i> Back to Admin
        </a>
    </div>
</div>
