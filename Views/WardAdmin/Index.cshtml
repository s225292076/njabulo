@{
    ViewData["Title"] = "Patient Management";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="user-background">
    <div class="main-content">
        <div class="content">
            <div class="container-fluid patient-dashboard py-5">
                <!-- Welcome Message -->
                <div class="row justify-content-center text-center mb-5">
                    <div class="col-lg-8">
                        <h1 class="display-4 fw-bold text-dark">Patient Management</h1>
                        <p class="lead text-muted">Manage patient check-in, admissions, movements, and discharges efficiently.</p>
                    </div>
                </div>

                <!-- Dashboard Cards -->
                <div class="row g-4 px-3 px-md-5">
                    <div class="row justify-content-center g-4 px-3 px-md-5 mb-3">
                        <!-- Check-In Patient -->
                        <div class="col-md-6 col-xl-4">
                            <div class="card h-100 p-3 shadow dashboard-card border-warning-subtle">
                                <div class="card-body d-flex flex-column justify-content-between">
                                    <div>
                                        <h5 class="card-title text-warning">
                                            <i class="bi bi-door-open-fill me-2"></i> Check-In
                                        </h5>
                                        <p class="card-text">Check-in patient, alert doctor and Admit Patient</p>
                                    </div>
                                    <a asp-controller="WardAdmin" asp-action="CheckIn" class="btn btn-warning mt-3 text-dark">Check-In</a>
                                </div>
                            </div>
                        </div>

                        <!-- List Of  Patients -->
                        <div class="col-md-6 col-xl-4">
                            <div class="card h-100 p-3 shadow dashboard-card border-secondary-subtle">
                                <div class="card-body d-flex flex-column justify-content-between">
                                    <div>
                                        <h5 class="card-title text-secondary">
                                            <i class="bi bi-hospital-fill me-2"></i> Patients
                                        </h5>
                                        <p class="card-text">View patient lists  & create or open folders</p>
                                    </div>
                                    <a asp-controller="WardAdmin" asp-action="ViewAdmissions" class="btn btn-secondary mt-3">View</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Monitor Movement -->
                    <div class="col-md-6 col-xl-6">
                        <div class="card h-100 p-3 shadow dashboard-card border-info-subtle">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="card-title text-info">
                                        <i class="bi bi-person-walking me-2"></i> Monitor Movement
                                    </h5>
                                    <p class="card-text">Track transfers and patient ward movement.</p>
                                </div>
                                <a asp-controller="WardAdmin" asp-action="MonitorMovement"
                                   class="btn btn-info mt-3 text-white">Monitor</a>
                            </div>
                        </div>
                    </div>


                    <!-- Discharge Patient -->
                    <div class="col-md-6 col-xl-6">
                        <div class="card h-100 p-3 shadow dashboard-card border-success-subtle">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="card-title text-success">
                                        <i class="bi bi-box-arrow-right me-2"></i> Discharge Patient
                                    </h5>
                                    <p class="card-text">Process and complete a patient's discharge.</p>
                                </div>
                                <a asp-controller="WardAdmin" asp-action="DischargeList" class="btn btn-success mt-3">View</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div> 
    </div>
</div>



