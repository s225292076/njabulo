@{
    ViewData["Title"] = "User Page";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
@using Microsoft.AspNetCore.Identity
@inject UserManager<Ward_Management_System.Models.Users> UserManager
@{
    var user = await UserManager.GetUserAsync(User);
    var fullName = user?.FullName ?? User.Identity.Name;
}

<div class="user-background">
    <div class="main-content">
        <div class="content">
            <div class="container-fluid patient-dashboard py-5">
                <!-- Welcome Message Centered -->
                <div class="row justify-content-center text-center mb-5">
                    <div class="col-lg-8">
                        <h1 class="display-4 fw-bold text-dark">Welcome, @fullName!</h1>
                        <p class="lead text-muted">Manage your information and appointments with ease.</p>
                    </div>
                </div>

                <!-- Dashboard Cards -->
                <div class="row g-4 px-3 px-md-5">
                    <!-- Add Emergency Contact Details -->
                    <div class="col-md-6 col-xl-4">
                        <div class="card h-100 p-3 shadow dashboard-card border-primary-subtle">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="card-title text-primary">
                                        <i class="bi bi-person-plus-fill me-2"></i> Add Emergency Contact Details
                                    </h5>
                                    <p class="card-text">Help us reach the right person in case of an emergency by keeping your contact details current.</p>
                                </div>
                                <a asp-controller="User" asp-action="AddEmergencyContactDetails" class="btn btn-primary mt-3">Add</a>
                            </div>
                        </div>
                    </div>

                    <!-- View Personal Details -->
                    <div class="col-md-6 col-xl-4">
                        <div class="card h-100 p-3 shadow dashboard-card border-info-subtle">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="card-title text-info">
                                        <i class="bi bi-person-lines-fill me-2"></i> View Personal Details
                                    </h5>
                                    <p class="card-text">Review and verify your submitted personal information.</p>
                                </div>
                                <a asp-controller="User" asp-action="ViewPersonalDetails" class="btn btn-info mt-3 text-white">View</a>
                            </div>
                        </div>
                    </div>

                    <!-- Book Appointment -->
                    <div class="col-md-6 col-xl-4">
                        <div class="card h-100 p-3 shadow dashboard-card border-success-subtle">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="card-title text-success">
                                        <i class="bi bi-calendar-check-fill me-2"></i> Book Appointment
                                    </h5>
                                    <p class="card-text">Schedule appointments quickly with our available doctors.</p>
                                </div>
                                <a asp-controller="User" asp-action="ChooseDoctorTime" class="btn btn-success mt-3">Book</a>
                            </div>
                        </div>
                    </div>

                    <!-- View Schedule -->
                    <div class="col-md-6 col-xl-6">
                        <div class="card h-100 p-3 shadow dashboard-card border-warning-subtle">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="card-title text-warning">
                                        <i class="bi bi-calendar-week-fill me-2"></i> View Schedule
                                    </h5>
                                    <p class="card-text">See all your upcoming appointments in one place.</p>
                                </div>
                                <a asp-controller="User" asp-action="ViewAppointments" class="btn btn-warning mt-3 text-dark">View</a>
                            </div>
                        </div>
                    </div>

                    <!-- Change Password -->
                    <div class="col-md-6 col-xl-6">
                        <div class="card h-100 p-3 shadow dashboard-card border-danger-subtle">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="card-title text-danger">
                                        <i class="bi bi-key-fill me-2"></i> Change Password
                                    </h5>
                                    <p class="card-text">Update your password for improved account security.</p>
                                </div>
                                <a asp-controller="Account" asp-action="ChangePassword" class="btn btn-danger mt-3">Change</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





