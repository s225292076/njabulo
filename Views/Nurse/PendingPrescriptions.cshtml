@model IEnumerable<Ward_Management_System.Models.Prescription>

<h2>Pending Prescriptions</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Patient</th>
            <th>ID Number</th>
            <th>Doctor</th>
            <th>Date</th>
            <th>Items</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Appointment.FullName</td>
                <td>@p.Appointment.IdNumber</td>
                <td>@p.PrescribedBy?.FullName</td> 
                <td>@p.PrescribedDate.ToString("yyyy-MM-dd")</td>
                <td>@p.Medications.Count()</td>
                <td>@(p.Medications.All(m => m.IsDispensed) ? "Completed" : "Pending")</td>
                <td>
                    <a asp-action="AdministerMedication" asp-route-prescriptionId="@p.PrescriptionId"
                       class="btn btn-primary btn-sm">View & Administer</a>
                </td>
            </tr>
        }
    </tbody>
</table>

